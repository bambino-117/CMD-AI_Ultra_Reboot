document.addEventListener('DOMContentLoaded', () => {
  // GÃ¨re la navigation entre les sections
  window.showSection = (sectionId) => {
    document.querySelectorAll('.content-section').forEach(section => {
      section.classList.add('hidden');
    });
    document.getElementById(sectionId + '-section').classList.remove('hidden');
  };

  // Simule la recherche et affiche les rÃ©sultats
  document.getElementById('run-search-btn').addEventListener('click', () => {
    const query = document.getElementById('osint-query-input').value;
    const resultsOutput = document.getElementById('results-output');
    
    // Simuler le contenu des rÃ©sultats d'osint_extension.py
    let resultText = "Aucun rÃ©sultat spÃ©cifique trouvÃ©.";
    if (query.includes('@')) {
      resultText = `ðŸ“§ Email dÃ©tectÃ© : ${query}\nðŸ” Recherche : https://hunter.io/verify/${query}`;
    } else if (query.includes('.')) {
      resultText = `ðŸ¢ Domaine dÃ©tectÃ© : ${query}\nðŸ” WHOIS : https://whois.net/whois/${query}`;
    }
    
    resultsOutput.innerText = resultText;
  });
  
  // Affiche l'Ã©cran d'accueil par dÃ©faut
  showSection('search');
});

